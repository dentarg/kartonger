<p>
  Totalt <strong><%= @boxes.count %></strong> kartonger
  •
  <%= link_to "Ladda hem CSV export", boxes_url(format: :csv) %>
  •
  <%= link_to "Ladda hem databasen", boxes_url(format: :db), data: { turbo: false } %>
</p>
<table class="striped">
  <colgroup>
    <col style="width: 10%;">
    <col style="width: 10%;">
    <col style="width: 90%;">
    <col style="width: 1%;">
    <col style="width: 1%;">
  </colgroup>
  <thead>
    <tr>
      <th scope="col">Nummer</th>
      <th scope="col">Rum</th>
      <th scope="col">
        <%= link_to "Innehåll", "javascript:void(0)", data: { action: "details#toggleOpen" } %>
      </th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @boxes.each do |box| %>
      <tr>
        <th scope="row" style="white-space: nowrap">
          <%= link_to "Kartong #{box.number}", box_path(box) %>
          <br>
          <small>
            <small>
              <%= box.packed_by %>
            </small>
          </small>
        </th>
        <td><%= box.room %></td>
        <td>
          <details>
            <summary>
              <strong><%= box.title %></strong>
            </summary>
            <pre style="white-space: pre-wrap"><%= box.description %></pre>
          </details>

        </td>
        <td>
          <%= link_to "✏️", edit_box_path(box) %>
        </td>
        <td>
          <%= link_to "🗑️", box_path(box), data: {
                              turbo_method: :delete,
                              turbo_confirm: "Are you sure?"
                            } %>
      </tr>
    <% end %>
  </tbody>
</table>
